<%= form_for(@character) do |f| %>

    <% if @character.world.nil? %>
        <label class="label">character world:</label>
        <%= f.select :world_id, options_from_collection_for_select(world.all, :id, :name) %><br>
        <i>Don't see your world? Create a new world <%= link_to "here.", new_world_path %></i><br><br>
    <% else %>
        <%= hidden_field_tag "character[world_id]", @character.world_id %>
    <% end %>

    <label class="label"> Name: </label>
    <%= f.text_field :name %><br><br>

    <label class="label">Character Class:</label>
    <%= f.text_field :character_class %><br><br>

    <label class="label">Alignment:</label>
    <%= f.text_field :alignment %><br><br>

    <label class="label">Species:</label>
    <%= f.text_field :species %><br><br>

    <label class="label">Description:</label>
    <%= f.text_field :description %><br><br>
    
    <%= f.hidden_field :user_id, value:current_user.id %>
 
   <input type="submit" value="Submit" class="button is-primary">
<% end %>